<% @post.comments.created_at_desc.each do |comment| %>
<%= comment.name %> Say: <br>
<%= comment.comment %> <br>
<%= comment.created_at.strftime("%d/%m/%Y - %H:%M:%S") %> - 
<%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' },remote: true %>
<hr>
<% end %>